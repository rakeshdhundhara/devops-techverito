pipeline {
    agent any
    environment {
        REGISTRY = "rakeshbarwala"
        BACKEND_IMAGE = "devops-backend"
        FRONTEND_IMAGE = "devops-frontend"
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/rakeshdhundhara/devops-techverito.git',
                    credentialsId: 'github-tokenA'
            }
        }

        stage('Build Backend Docker Image') {
            steps {
                // --no-cache ensures Docker rebuilds every time
                sh "docker build --no-cache -t $REGISTRY/$BACKEND_IMAGE:latest ./backend"
            }
        }

        stage('Build Frontend Docker Image') {
            steps {
                sh "docker build --no-cache -t $REGISTRY/$FRONTEND_IMAGE:latest ./frontend"
            }
        }

        stage('Push Docker Images') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockercredentialA', passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
                    sh "echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin"
                    sh "docker push $REGISTRY/$BACKEND_IMAGE:latest"
                    sh "docker push $REGISTRY/$FRONTEND_IMAGE:latest"
                }
            }
        }

        // stage('Deploy to Kubernetes') {
        //     steps {
        //           sh '''
        //             eval $(minikube -p minikube docker-env)
        //             kubectl apply -f k8s/db-secret.yaml
        //             kubectl apply -f k8s/postgres-deployment.yaml
        //             kubectl apply -f k8s/backend-deployment.yaml
        //             kubectl apply -f k8s/frontend-deployment.yaml
        //             '''
                
        //     }
        // }
        stage('Deploy Frontend Container') {
    steps {
        withCredentials([usernamePassword(credentialsId: 'dockercredentialA', passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
            sh """
            echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
            docker pull rakeshbarwala/devops-frontend:latest

            docker stop frontend-test || true
            docker rm frontend-test || true
            docker run -d -p 3000:3000 --name frontend-test rakeshbarwala/devops-frontend:latest
            """
        }
    }
}

    }
}
